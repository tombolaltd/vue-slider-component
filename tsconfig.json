{
    "extends": "../../config/tsconfig.base.json",
    "compilerOptions": {
        "declaration": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "./types",
        "outDir": "dist",
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2015",
            "es5",
            "es6"
        ]
    },
    "include": [
        "./src/**/*.*"
    ],
    "exclude": [
        "./node_modules",
        "./**/*.spec.ts"
    ]
}
